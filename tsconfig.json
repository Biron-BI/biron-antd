{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "es6",
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
